{% extends "base.njk" %}

{% block styles %}
  <link rel="stylesheet" href="/dist/styles/pages/home.min.css">
{% endblock %}

{% block content %}

<div class="Gallery">
  {% for thing in collections.thing %}
    <a
      class="Gallery__image"
      href="{{ thing.data.page.url }}"
      style="background-image: url('{{ thing.data.images[0].image }}');"
    ></a>
  {% endfor %}
</div>

{% endblock %}
